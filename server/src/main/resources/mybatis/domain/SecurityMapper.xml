<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.todo.core.security.repository.SecurityMapper">
    <select id="findUserByEmail" parameterType="java.lang.String"
            resultType="net.todo.core.security.dto.User$UserAccount">
        select
            id,
            email,
            nickname as name,
            password,
            auth as role
        from user
        where email = #{email} and status = 0
    </select>

</mapper>